<span class=line></span>
<span class=line><span style=color:#569cd6>void</span><span style=color:#dcdcaa> loop</span><span style=color:#d4d4d4>(){</span></span>
<span class=line><span style=color:#6a9955>  //si existe informaci√≥n pendiente</span></span>
<span class=line><span style=color:#c586c0>  if</span><span style=color:#d4d4d4> (</span><span style=color:#9cdcfe>Serial</span><span style=color:#d4d4d4>.</span><span style=color:#dcdcaa>available</span><span style=color:#d4d4d4>()></span><span style=color:#b5cea8>0</span><span style=color:#d4d4d4>){</span></span>
<span class=line><span style=color:#6a9955>    //leeemos la opcion</span></span>
<span class=line><span style=color:#569cd6>    char</span><span style=color:#d4d4d4> option = </span><span style=color:#9cdcfe>Serial</span><span style=color:#d4d4d4>.</span><span style=color:#dcdcaa>read</span><span style=color:#d4d4d4>();</span></span>
