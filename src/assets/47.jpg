<span class=line><span style=color:#dcdcaa>  pinMode</span><span style=color:#d4d4d4>(ledPIN , OUTPUT);</span><span style=color:#6a9955>  //definir pin como salida</span></span>
<span class=line><span style=color:#d4d4d4>}</span></span>
<span class=line><span style=color:#d4d4d4> </span></span>
<span class=line><span style=color:#569cd6>void</span><span style=color:#dcdcaa> loop</span><span style=color:#d4d4d4>(){</span></span>
<span class=line><span style=color:#dcdcaa>  digitalWrite</span><span style=color:#d4d4d4>(ledPIN , HIGH);</span><span style=color:#6a9955>   // poner el Pin en HIGH</span></span>
<span class=line><span style=color:#dcdcaa>  delay</span><span style=color:#d4d4d4>(</span><span style=color:#b5cea8>1000</span><span style=color:#d4d4d4>);</span><span style=color:#6a9955>                   // esperar un segundo</span></span>
<span class=line><span style=color:#dcdcaa>  digitalWrite</span><span style=color:#d4d4d4>(ledPIN , LOW);</span><span style=color:#6a9955>    // poner el Pin en LOW</span></span>
